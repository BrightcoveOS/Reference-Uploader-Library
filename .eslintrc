{
  "extends": "eslint:recommended",
  "rules": {
    "indent": [ "error", 2, { "SwitchCase": 1 } ],
    "quotes": [ "warn", "single", "avoid-escape" ],
    "linebreak-style": [ "error", "unix" ],
    "semi": [ "error", "always" ],
    "no-console": "warn",
    "no-debugger": "warn",
    "arrow-spacing": "error",
  },
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
  },
  "globals": {
    "BCUploader": true,
    "expect": true,
  }
}
